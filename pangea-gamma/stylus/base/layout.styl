@require('platform.styl')

section#app
	height 100%
	overflow hidden

	section#main
		//overflow-y auto
		//overflow-x hidden
		background-color $mainBgColor
		.slide
			overflow-y auto
			overflow-x hidden
			background-color $slideBgColor


section#app.platformError
	display none
section#platformError
	display none
