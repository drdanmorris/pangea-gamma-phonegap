@require('platform.styl')


.numericUpDown
	margin-right 5px
	> div
		float left
	
	.title
		width 45px
		height 20px
		text-align right
		font-size 1.2em
		padding-right 5px
		padding-top 10px

	.ctrl
		borders($inputBorderColor)
		width 120px
		padding 0
		white-space nowrap
		> div
			margin 0
			height 30px
			float left
		
		input
			width 60px
			height 30px
			margin 0
			padding 0
			border none
			background-color $textBoxColor
			font-size 1.5em
			text-align center
		
		.up
		.down
			width 30px
			background-color $buttonColor
			font-size 2.0em
			font-weight bold
			color white
			text-align center
			line-height 30px
			cursor pointer
			no-select()

		.up.false
		.down.false
			background-color $disabledButtonColor


.numericUpDownCtrlDetail
	font-size 0.8em
	height 30px
	> label
		line-height 38px
