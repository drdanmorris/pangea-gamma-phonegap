@require('platform.styl')

$summaryBannerHeight = 40px

div#summaryBanner 
	height $summaryBannerHeight
	background-color $spxGreenColor
	color white
	overflow hidden
	position relative

	div.inner 
		transition-container()
		> div 
			height $summaryBannerHeight
		
		div#summary 
			flexi()
			div.flx 
				flex-ratio()
				> div
					padding-top 3px
					label
						display inline-block
						text-align right
					label.col1
						width 60px
					label.col2
						width 40px
					span 
						display inline-block
						text-align right
						min-width 65px
					
			#btnViewSearch
				square(30)
				relative(4, -6)
				round-corners(4)
			
		
		div#search 
			span
				display inline-block
				height 30px
				width 60px
				line-height 30px
				margin 4px 0 0 10px
				text-align center
				round-corners(4)
				font-size 0.9em
			
			input 
				margin-left 10px
				borders()
			
		
	
	div.inner.summary
		translate-reset()
	
	div.inner.search
		translate-y(-40)
		
	


